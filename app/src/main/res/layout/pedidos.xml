<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    tools:context=".Pedidos.PedidosActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="top"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--     <View
                     android:layout_width="match_parent"
                     android:layout_height="3dp"
                     android:background="@color/colorPrimaryDark" />-->

            <TextView
                android:id="@+id/lblNombreCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="NombreCliente"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="13dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblCodigoCliente"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/borde_campos_pedidos"
                    android:text="1102-01-01-000024"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblCanal"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/borde_campos_pedidos"
                    android:gravity="center"
                    android:text="Mayorista"
                    android:textColor="@color/colorAccent"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblRuta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/borde_campos_pedidos"
                    android:gravity="center"
                    android:text="Super_02"
                    android:textColor="@color/colorAccent"

                    android:textSize="13dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <Spinner
            android:id="@+id/cboVendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/cboCondicion"
                android:layout_width="150dp"
                android:layout_height="wrap_content"></Spinner>

            <Spinner
                android:id="@+id/cboSucursal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                ></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp">

                <EditText
                    android:id="@+id/txtCodigoArticulo"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Codigo Articulo"
                    android:inputType="text"
                    android:maxLines="1"></EditText>


                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/places_ic_search"
                    android:backgroundTint="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/lblDescripcionArticulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/lblDescPrecioArticulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="10dp"
                    android:text="PRECIO:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrecioArticulo"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="0.00"
                    android:textColor="@color/colorAccent"

                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDescUMArticulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="10dp"
                    android:text="U/M:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblUMArticulo"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="UNIDAD"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDescTc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginRight="10dp"
                    android:text="TC:"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblTC"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="0.00"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp">

                <EditText
                    android:id="@+id/txtCantidad"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Cantidad"
                    android:inputType="number"
                    tools:ignore="NestedWeights"></EditText>

                <EditText
                    android:id="@+id/txtDescuento"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"
                    android:background="@drawable/rounded_edittext"
                    android:ems="10"
                    android:hint="Descuento"
                    android:inputType="number"
                    tools:ignore="NestedWeights"></EditText>

                <Button
                    android:id="@+id/btnAgregar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/ic_check_circle_black_24dp"
                    android:backgroundTint="#1cd100"
                    android:onClick="Agregar" />
            </LinearLayout>

        </LinearLayout>



            <EditText
                android:id="@+id/txtObservacion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Observaciones"
                android:inputType="text"
                tools:ignore="NestedWeights"
                android:background="@drawable/rounded_edittext"></EditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0">

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/lblColDescripcion"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"

                                android:background="@drawable/borde_campos_pedidos"
                                android:paddingLeft="0dp"
                                android:text="Descripcion"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/lblColCantidad"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"

                                android:layout_gravity="left"
                                android:background="@drawable/borde_campos_pedidos"
                                android:gravity="right"
                                android:text="Cant."
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/lblColPrecio"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/borde_campos_pedidos"
                                android:gravity="right"
                                android:text="Precio"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/lblColPorDescuento"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/borde_campos_pedidos"
                                android:gravity="right"
                                android:text="%Desc."
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/lblColDescuento"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/borde_campos_pedidos"
                                android:gravity="right"
                                android:text="Desc."
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/lblColSubtotal"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/borde_campos_pedidos"
                                android:gravity="right"
                                android:text="Subtotal"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/lblColIva"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/borde_campos_pedidos"
                                android:gravity="right"
                                android:text="IVA"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:typeface="monospace" />

                            <TextView
                                android:id="@+id/lblColTotal"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/borde_campos_pedidos"
                                android:gravity="right"
                                android:text="Total"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#000000"
                                android:typeface="monospace" />

                        </LinearLayout>


                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ListView
                                android:id="@+id/listPedido"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                        </LinearLayout>


                    </TableRow>

                    <TableRow
                        android:id="@+id/tableFooter"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0">

                        <TextView
                            android:id="@+id/lblFooter"
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:background="@drawable/borde_campos_pedidos"
                            android:text="Total items: 0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000000"
                            android:textSize="15dp"
                            android:typeface="monospace" />
                    </TableRow>

                </TableLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/rounded_edittext">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/lblDescMon"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="Mon"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/lblDescSubtotal"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="SubTotal"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/lblDescIva"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="IVA"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/lblDescTotal"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Total"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimaryDark">

                    </View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblMonCor"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="COR"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorAccent" />

                        <TextView
                            android:id="@+id/lblSubTotalCor"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0.00"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorAccent" />


                        <TextView
                            android:id="@+id/lblIvaCor"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0.00"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorAccent" />

                        <TextView
                            android:id="@+id/lblTotalCor"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0.00"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblMonDol"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"

                            android:text="DOL"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimaryGreen" />

                        <TextView
                            android:id="@+id/lblSubTotalDol"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0.00"

                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimaryGreen" />


                        <TextView
                            android:id="@+id/lblIvaDol"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0.00"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimaryGreen" />

                        <TextView
                            android:id="@+id/lblTotalDol"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="0.00"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorPrimaryGreen" />

                    </LinearLayout>
                    <!--  <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="22dp"
                          android:orientation="horizontal">





                      </LinearLayout>-->
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="240dp"
                android:background="@mipmap/ic_save_black_24dp"
                android:backgroundTint="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_cancel_black_24dp"
                android:backgroundTint="#ff0000" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>