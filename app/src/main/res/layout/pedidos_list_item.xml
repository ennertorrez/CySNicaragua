        <TextView
            android:id="@+id/lblDetalleDescripcion"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:ellipsize="end"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:gravity="left"
            android:focusable="false"

             />

        <TextView
            android:id="@+id/lblDetalleCantidad"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:paddingLeft="2dp"
            android:gravity="right"
            android:focusable="false"
             />
        <TextView
            android:id="@+id/lblDetallePrecio"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:paddingLeft="2dp"
            android:gravity="right"
            android:focusable="false"
             />

        <TextView
            android:id="@+id/lblDetallePorDescuento"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:paddingLeft="2dp"
            android:gravity="right"
            android:focusable="false"
             />

    <TextView
            android:id="@+id/lblDetalleSubTotal"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:paddingLeft="2dp"
            tools:ignore="SelectableText,SpUsage" />

        <TextView
            android:id="@+id/lblDetalleIva"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:paddingLeft="2dp"
            tools:ignore="SelectableText,SpUsage" />

        <TextView
            android:id="@+id/lblDetalleTotal"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:paddingLeft="2dp"
            tools:ignore="SelectableText,SpUsage" />

    </LinearLayout>



</LinearLayout>