<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <RelativeLayout
        android:id="@+id/Rl1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/White">

        <EditText
            android:id="@+id/txtFechaDevolucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/borde_campos_pedidos"
            android:cursorVisible="false"
            android:drawableRight="@drawable/ic_date_range_black_24dp"
            android:focusableInTouchMode="false"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:text="Fecha devolucion"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold"></EditText>

        <Button
            android:id="@+id/btnSincronizar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_autorenew_black_24dp"
            android:backgroundTint="#278001"></Button>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RlrGrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rl1">

        <RadioGroup
            android:id="@+id/rgGrupo1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/rounded_edittext"
            android:checkedButton="@+id/rbFactura"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <RadioButton
                android:id="@+id/rbFactura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Factura" />

            <RadioButton
                android:id="@+id/rbCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cliente" />
            <TextView
                android:id="@+id/lblespacio"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/colorBlack" />

            <Button
                android:id="@+id/btnBuscarDev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:text="Ver Detalle"
                android:textColor="#FFFFFFFF"
                android:textStyle="bold"
                android:backgroundTint="@color/colorPrimaryDark"
                />
        </RadioGroup>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RlrGrupo">

        <EditText
            android:id="@+id/txtBusqueda"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnBuscar"
            android:background="@drawable/rounded_edittext"
            android:hint="Ingrese una busqueda"
            android:inputType="text"
            android:maxLines="1" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/places_ic_search"
            android:backgroundTint="@color/colorPrimaryDark"

            />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/R14"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Rl2"
        android:orientation="vertical"
        android:weightSum="2">

        <ListView
            android:id="@+id/listdevolucionesdia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Rl2"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listdevolucionesdia"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"

            >


            <TextView
                android:id="@+id/lblFooterCantidad"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Cantidad: 0"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblFooterSubtotal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="right"
                android:text="Subtotal: C$0.00"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
