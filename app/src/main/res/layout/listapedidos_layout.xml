<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name = "com.suplidora.sistemas.PopupListFragment"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Fecha Pedido:"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/txtFechaPedido"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:cursorVisible="false"
            android:textSize="15dp"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:background="@drawable/spinner_background"
            android:orientation="horizontal">
        </EditText>

    </LinearLayout>

    <EditText
        android:id="@+id/txtBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnBuscar"
        android:hint="Nombre cliente"
        android:maxLines="1"
        android:inputType="text"
       />

    <TextView
        android:background="@color/colorPrimary"
        android:textColor="@color/White"
        android:id="@+id/lblFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Total pedidos: 0" />

    <ListView
        android:id="@+id/listpedidosdia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblFooter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSincronizar"
        />
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/places_ic_search"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_weight="1"
        />
    <Button
        android:id="@+id/btnSincronizar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/ic_autorenew_black_24dp"
        android:backgroundTint="#49f700"
        android:layout_below="@+id/btnBuscar"
        android:layout_weight="1"
        />

</RelativeLayout>